<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.rentit.projectr"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/niv_request_status_product_image"
        android:layout_height="70dip"
        android:layout_width="70dip"/>
    <LinearLayout
        android:id="@+id/container_request_status"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.rentit.projectr.NameValueView
        android:id="@+id/nv_user_name"
            android:layout_marginTop="5dip"
        custom:leftLabel="Owner"
        custom:leftLabelColor ="@color/wallet_link_text_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

        <com.rentit.projectr.NameValueView
            android:id="@+id/nv_product_name"
            android:layout_marginTop="5dip"
            custom:leftLabel="Product"
            custom:leftLabelColor ="@color/wallet_link_text_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.rentit.projectr.NameValueView
            android:id="@+id/nv_status"
            android:layout_marginTop="5dip"
            custom:leftLabel="Status"
            custom:leftLabelColor ="@color/wallet_link_text_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <!--<TextView-->
    </LinearLayout>


