<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:weightSum="8"
        android:orientation="horizontal">
        <!--<ImageView
         android:background="@drawable/product_name_band_colour"
            android:layout_weight="3"
            android:layout_width="0dip"
            android:layout_height="100dip"
            android:id="@+id/iv_row_product_image"
            android:src="@drawable/philips"/>-->
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_row_product_image"
            android:layout_weight="3"
            android:layout_width="0dip"
            android:layout_height="100dp"/>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="4"
            android:orientation="vertical"
            android:layout_marginLeft="8dip"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_row_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:textSize="25sp"
                android:text="Philips Air Fryer"/>

            <TextView
                android:id="@+id/tv_row_product_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rs 10000"/>

            <TextView
                android:id="@+id/tv_row_product_avaialbility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/accent_material_light"
                android:text="is Available"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_row_arrow"
            android:src="@drawable/arrow_coloured"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>